@test
fun shutdownThrows()
    var tcp = TCP() 
    
    tcp.connect("0.0.0.0", 80, fun(status)
        tcp.shutdown(fun(status)
            tcp.close()
            print(doesNotExist)
        end)
    end)
    
    var didThrow = false
